<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_item"
    android:padding="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_search_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/iv_favorite"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_search_image"
        app:layout_constraintTop_toTopOf="@+id/iv_search_image"
        android:src="@drawable/ic_favorite_filled" />

    <TextView
        android:id="@+id/tv_portal_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daum카페"
        android:layout_marginTop="7dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/iv_search_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_search_image" />

    <TextView
        android:id="@+id/tv_posted_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024-01-21 22:50:57"
        android:textSize="15sp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="@+id/tv_portal_site"
        app:layout_constraintTop_toBottomOf="@+id/tv_portal_site" />


</androidx.constraintlayout.widget.ConstraintLayout>